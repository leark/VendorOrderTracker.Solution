@{
  Layout = "_Layout";
}
@using VendorOrderTracker.Models;

<div class="container">
  <h3>Vendor List Page</h3>
  <div>
    @{
      List<Vendor> vendors = Vendor.GetAllVendors();
      if (vendors.Count > 0)
      {
        <ul>
          @foreach (Vendor v in vendors)
          {
            <li><a href="/vendors/@v.Id">@v.Name</a></li>
          }
        </ul>
      }
      else
      {
        <h5>There are currently no vendors.</h5>
      }
    }
  </div>

  <div>
    <form action="/vendors/new" method="get">
      <button type="submit">Create a new vendor</button>
    </form>
  </div>
</div>
