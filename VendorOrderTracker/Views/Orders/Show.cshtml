@{
  Layout = "_Layout";
}
@using VendorOrderTracker.Models;

@{
  Vendor vendor = Model["vendor"];
  Order order = Model["order"];
}

<div class="container">
  <h5>Order by @vendor.Name</h5>
  <h6>Title: @order.Title</h6>
  <h6>Description: @order.Desc</h6>
  <h6>Price: $@order.Price</h6>
  <h6>Order Date: @order.Date.Year - @order.Date.Month - @order.Date.Day</h6>
  <div>
    <form action="/vendors/@vendor.Id/orders/@order.Id" method="post">
      <button type="submit">Remove Order</button>
    </form>
  </div>
  <a href="/vendors/@vendor.Id/orders">Back to orders</a>
</div>